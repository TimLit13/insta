<% @posts.each do |post| %>
	<div class="card mt-3 post">
		<div class="card-header d-flex align-items-center">
			<div class="col-sm-11">
				<%= link_to user_path(post.user), class: "no-text-decoration" do %>
					<%= image_tag avatar_url(post.user), class: "post-author-icon"%>
				<% end %>
				<%= link_to user_path(post.user), class: "normal-color no-text-decoration", title: post.user.name do %>
					<strong><%= post.user.name %></strong>
				<% end %>
			</div>
			<% if post.user == current_user %>
				<div class="col-sm-1">
					<%= link_to post_path(post), method: :delete, class: "ml-auto delete-post-icon mx-0 my-auto text-right", data: {confirm: "You really wants to delete post?"} do %>
						<i class="far fa-trash-alt" aria-hidden="true"></i>
					<% end%>
				</div>
			<% end %>
		</div>

		<% if post.photos.any? %>
			<div id="carouselExampleFade-<%= post.id %>" class="carousel slide carousel-fade" data-bs-ride="carousel">
				<div class="carousel-inner">
				  	<% post.photos.each_with_index do |photo, ind| %>
						<% if photo.image.url(:standard) != nil %>
						<div class="carousel-item <%= "active" if  ind == 0 %>">
							<%= image_tag photo.image.url(:standard), class: "block w-100"%>
						</div>
						<% end %>
					<% end %>
				</div>
				  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade-<%= post.id %>" data-bs-slide="prev">
				    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
				    <span class="visually-hidden">Previous</span>
				  </button>
				  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade-<%= post.id %>" data-bs-slide="next">
				    <span class="carousel-control-next-icon" aria-hidden="true"></span>
				    <span class="visually-hidden">Next</span>
				  </button>
			</div>
		<% end %>	
			
		<div class="card-body">
			<div class="row actions">
				<% if post.is_liked(current_user).present? %>
					<%= link_to image_pack_tag('posts/heart_filled_red.svg', class: 'post-heart-icon'), like_path(post.is_liked(current_user)), class: "col-sm-1", method: :delete, remote: true, data: {confirm: "Are you shure to cancel like?"}  %>
				<% else %>
					<%= link_to image_pack_tag('posts/heart.svg', class: 'post-heart-icon'), post_likes_path(post), class: "col-sm-1", method: :post, remote: true %>
				<% end %>
				<%= link_to image_pack_tag('posts/comment.svg', class: 'post-comment-icon'), '#', class: "col-sm-1"%>
				<div class="col-sm-9"></div>
				<%= link_to image_pack_tag('posts/bookmark.svg', class: 'post-bookmark-icon'), '#', class: "col-sm-1"%>
			</div>
			<div>
				<strong>
					<% post.likes.each_with_index do |like, index| %>
						<% if post.likes.size == 1 %>
							<%= like.user.name %> </strong> like this
						<% elsif like == post.likes.last %>
							</strong> and <strong>
							<%= + like.user.name %></strong> like this
						<% elsif index > 1 %>
							</strong><%= "and" + (post.likes.size-index).to_s + "others" %> like this
							<% break %>
						<% elsif index == post.likes.size-2 || index == 1 %>
							<%=  like.user.name %>
						<% else %>
							<%= like.user.name + ", "%>
						<% end %>
					<% end %>
				</strong>
			</div>	
			<div>
				<span>
					<strong><%= post.user.name %></strong>
					<span><%= post.content %></span>
				</span>
			</div>
			<%= link_to time_ago_in_words(post.created_at).upcase + "AGO", post_path(post), class: "light-color post-time no-text-decoration" %>
			<hr>
			<div class="row actions">
				<form action="#" class="w-100">
					<div>
						<textarea class="form-control comment-input border-0" placeholder="Add a comment ..." rows="1"></textarea>
					</div>
				</form>
			</div>
		</div>
	</div>
<% end %>