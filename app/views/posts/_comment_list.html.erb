<% post.comments.each do |comment| %>
	<div class="mb-2">
		<div class="col-sm-10">
			<span>
				<strong>
					<%= link_to comment.user.name, user_path(comment.user), class: "no-text-decoration normal-color" %>
				</strong>
			</span>
			<span class="simply-text"><%= comment.content %></span>
		</div>
		<div class="col-sm-2">
			<% if comment.user == current_user%>
				<%= link_to comment_path(comment), method: :delete, class: "ml-auto delete-post-icon mx-0 my-auto delete-comment", data: {confirm: "You really want to delete comment?"}, remote: true do %>
					<i class="far fa-trash-alt" aria-hidden="true"></i>
				<% end%>
			<% end %>
		</div>
	</div>
<% end %>